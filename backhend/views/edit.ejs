  <% layout("/layout/boilerplate") %>
<body>
  <h1 style="text-decoration: line-through; text-align: center;">Edit Your Listing</h1>
  <div class="row form-new">
    <div class="col-8 offset-2">
         <form action="/listings/<%=list._id%>?_method=PATCH" method="post" novalidate class="needs-validation">
        <div class="mb-3">
          <label class="form-label" for="title">Title:</label>
          <input type="text" name="title" id="title" required class="form-control" value="<%=list.title%>" required>
           <div class="invalid-feedback">please enter the field</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description:</label>
          <textarea name="description" id="description" class="form-control" required><%=list.description%></textarea>
           <div class="invalid-feedback">please enter the field</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="image">Image URL:</label>
          <input type="text" name="image" id="image" class="form-control" value="<%=list.image%>" required>
           <div class="invalid-feedback">please enter the field</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="form-label" for="price">Price:</label>
            <input type="number" name="price" id="price" class="form-control" value="<%=list.price%>" required>
             <div class="invalid-feedback">please enter the field</div>
          </div>

          <div class="mb-3 col-md-8">
            <label class="form-label" for="location">Location:</label>
            <input type="text" name="location" id="location" class="form-control" value="<%=list.location%>" required>
             <div class="invalid-feedback">please enter the field</div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="country">Country:</label>
          <input type="text" name="country" id="country" class="form-control" value="<%=list.country%>" required>
           <div class="invalid-feedback">please enter the field</div>
        </div>
<form action="/listings/<%=list._id%>?_method=PATCH" method="post">
        <div class="addBtn">
          <button class="btn btn-danger">Edit  <i class="fa-solid fa-arrow-right" required></i></button>
        </div>
        </form>
      </form>
    </div>
  </div>
</body>

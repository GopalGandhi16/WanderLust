<% layout("/layout/boilerplate") %>

  <h1 class="text-center">Create New Listing</h1>

  <div class="row form-new">
    <div class="col-8 offset-2">
      <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title:</label>
          <input type="text" name="title" id="title" required class="form-control" placeholder="Enter listing title" required>
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please enter title</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description:</label>
          <textarea name="description" id="description" class="form-control" placeholder="Describe the listing"required></textarea>
            <div class="invalid-feedback">please fill description</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="image">Image URL:</label>
          <input type="file" name="image" id="image" class="form-control" placeholder="Paste image here" required>
            <div class="valid-feedback">Nice image!</div>
            <div class="invalid-feedback">Upload an image url</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="form-label" for="price">Price:</label>
            <input type="number" name="price" id="price" class="form-control" placeholder="e.g. 1500" required>
              <div class="invalid-feedback">Enter correct price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label class="form-label" for="location">Location:</label>
            <input type="text" name="location" id="location" class="form-control" placeholder="e.g. Mumbai, Maharashtra" required>
              <div class="invalid-feedback">Enter location</div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="country">Country:</label>
          <input type="text" name="country" id="country" class="form-control" placeholder="e.g. India" required>
            <div class="invalid-feedback">Enter country</div>
        </div>

        <div class="addBtn">
          <button class="btn btn-danger">Submit</button>
        </div>
      </form>
    </div>
  </div>
